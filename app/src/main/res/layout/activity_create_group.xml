<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="katka.shoppingpayments.screens.create_group.CreateGroupActivity">


    <EditText
        android:id="@+id/create_group_activity__group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_group_activity__group_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/create_group_activity__create_new_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_group_activity__create_new_group" />
</RelativeLayout>
