<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="katka.shoppingpayments.screens.add_payment.AddPaymentActivity">


    <EditText
        android:id="@+id/add_payment_activity__price_editText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:hint="@string/add_payment_activity__price"
        android:inputType="numberDecimal"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/add_payment_activity__shop_editText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:hint="@string/add_payment_activity__shop"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/add_payment_activity__add_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:text="@string/add_payment_activity__addPayment"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

</LinearLayout>
